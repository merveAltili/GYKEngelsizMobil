<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kullanici_resmi"
            android:layout_width="150dp"
            android:layout_height="150dp"
            />

        <TextView
            android:id="@+id/kullanici_ismi"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:text="Kullanıcı Adını Buraya Gir"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="35dp"
        android:layout_marginLeft="150dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/yorum_aciklama"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Açıklamayı buraya giriniz"
            android:textSize="16dp" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dp"
                android:id="@+id/btnYorumBegen"
                android:background="@color/gri"
                android:src="@drawable/ic_kalp_ici_bos_24dp"
                android:tint="@color/blue" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>