<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_weight="5">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/btndernekprofil1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="false"
                app:civ_border_color="@color/black"
                app:civ_border_width="0.5dp"/>


        </RelativeLayout>
        </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="0dp">
                <TextView
                    android:id="@+id/post_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textSize="14dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/etkinlik_adi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Etkinlik Adını Buraya Gir"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/etkinlik_aciklama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="Açıklamayı buraya giriniz"
                    android:textSize="12dp" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="405dp"
            android:layout_height="210dp"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/etkinlik_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="65dp"
                android:adjustViewBounds="true"
                android:background="@drawable/flat_button_normal"
                android:cropToPadding="true"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:baselineAlignBottom="true"

                android:scaleType="centerCrop"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="65dp"
                    android:id="@+id/btnYorumYap"
                    android:background="@color/gri"
                    android:src="@drawable/ic_chat_ici_bos24dp"
                    android:tint="@color/gri" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="65dp"
                    android:id="@+id/btnKatil"
                    android:background="@color/gri"
                    android:src="@drawable/ic_tik_24dp"
                    android:tint="@color/gri" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="65dp"
                    android:id="@+id/btnBegen"
                    android:background="@color/gri"
                    android:src="@drawable/ic_kalp_ici_bos_24dp"
                    android:tint="@color/gri" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="65dp"
                    android:id="@+id/btnMesajGonder"
                    android:background="@color/gri"
                    android:src="@drawable/ic_mail_ici_bos_24dp"
                    android:tint="@color/gri" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="65dp"
               >
                <EditText
                    android:id="@+id/edtyorum"

                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    />
                <ImageButton
                    android:id="@+id/imageBtnYorum"
                    android:layout_width="wrap_content"
                    android:background="@color/koyugri"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:src="@drawable/ic_send_black_24dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>